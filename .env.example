# =============================================================================
# Compliance & Intelligence Configuration
# =============================================================================

# Sanctions Lists Update Frequency (hours)
SANCTIONS_UPDATE_FREQUENCY=24

# Dark Web Monitoring
DARK_WEB_MONITORING_ENABLED=true
DARK_WEB_UPDATE_FREQUENCY=12

# ML Model Configuration
ML_MODEL_UPDATE_FREQUENCY=168  # 1 week
ML_CONFIDENCE_THRESHOLD=0.75

# =============================================================================
# GDPR & Data Retention Configuration
# =============================================================================

# Data Retention Period (days)
DATA_RETENTION_DAYS=2555  # 7 years (EU AML requirement)

# Automatic Data Deletion
AUTO_DELETE_EXPIRED_DATA=true
DATA_DELETION_FREQUENCY=24  # hours

# GDPR Compliance
GDPR_CONSENT_REQUIRED=true
GDPR_DATA_SUBJECT_REQUESTS_ENABLED=true

# =============================================================================
# Logging & Monitoring
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Configuration
LOG_FILE_PATH=/var/log/jackdawsentry/
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Performance Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# Development Configuration
# =============================================================================

# Development Mode
DEBUG=false
TESTING=false

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# =============================================================================
# Security Configuration
# =============================================================================

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=AES-256-GCM

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440  # 24 hours

# API Keys (for external services)
BLOCKCHAIN_API_KEY=your_blockchain_api_key
INTELLIGENCE_API_KEY=your_intelligence_api_key

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker Network
DOCKER_NETWORK=jackdawsentry_network

# Container Names
NEO4J_CONTAINER=jackdawsentry_neo4j
POSTGRES_CONTAINER=jackdawsentry_postgres
REDIS_CONTAINER=jackdawsentry_redis
API_CONTAINER=jackdawsentry_api

# Volume Paths
NEO4J_DATA_PATH=./data/neo4j
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
LOGS_PATH=./logs
