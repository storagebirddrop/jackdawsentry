# Jackdaw Sentry Environment Configuration

# =============================================================================
# Database Configuration
# =============================================================================

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=jackdaw_sentry_neo4j_password
NEO4J_DATABASE=neo4j

# PostgreSQL Compliance Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=jackdawsentry_compliance
POSTGRES_USER=jackdawsentry_user
POSTGRES_PASSWORD=jackdawsentry_pg_password

# Redis Cache & Message Queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=jackdawsentry_redis_password
REDIS_DB=0

# =============================================================================
# API Configuration
# =============================================================================

# FastAPI Server
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-super-secret-jackdaw-sentry-key-change-this-in-production
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# =============================================================================
# Blockchain Configuration
# =============================================================================

# Bitcoin
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=bitcoin_rpc_user
BITCOIN_RPC_PASSWORD=bitcoin_rpc_password
BITCOIN_NETWORK=mainnet

# Lightning Network
LND_RPC_URL=localhost:10009
LND_MACAROON_PATH=/path/to/lnd/admin.macaroon
LND_TLS_CERT_PATH=/path/to/lnd/tls.cert

# Ethereum/EVM Chains
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_NETWORK=mainnet

# BSC (BNB Chain)
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_NETWORK=mainnet

# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_NETWORK=mainnet

# Arbitrum
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_NETWORK=mainnet

# Base
BASE_RPC_URL=https://mainnet.base.org
BASE_NETWORK=mainnet

# Avalanche
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_NETWORK=mainnet

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet

# Tron
TRON_RPC_URL=https://api.trongrid.io
TRON_NETWORK=mainnet

# XRPL (Ripple)
XRPL_RPC_URL=https://xrplcluster.com
XRPL_NETWORK=mainnet

# Stellar
STELLAR_RPC_URL=https://horizon.stellar.org
STELLAR_NETWORK=public

# Sei
SEI_RPC_URL=https://rpc.sei-apis.com
SEI_NETWORK=mainnet

# Hyperliquid L1
HYPERLIQUID_RPC_URL=https://api.hyperliquid.xyz/info
HYPERLIQUID_NETWORK=mainnet

# Plasma
PLASMA_RPC_URL=https://rpc.plasma.network
PLASMA_NETWORK=mainnet

